@model Library_Management.Models.PulloutBookCopyViewModel

<form asp-action="Pullout" method="post">
    <input type="hidden" asp-for="BookCopyId" />
    <input type="hidden" asp-for="BookId" />
    <input type="hidden" asp-for="PulloutDate" value="@DateTime.Now" />
    
    <div class="modal-header">
        <h5 class="modal-title text-warning">
            <i class="bi bi-box-arrow-right"></i> Pull Out Book Copy
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    
    <div class="modal-body">
        <div class="alert alert-warning" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i>
            <strong>Notice:</strong> This will remove the book copy from active circulation.
        </div>
        
        <p>You are about to pull out the following book copy:</p>
        
        <div class="card mb-3">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    @if (!string.IsNullOrEmpty(Model.CoverImageUrl))
                    {
                        <img src="@Model.CoverImageUrl" alt="@Model.BookTitle" 
                             class="me-3 rounded" style="width: 80px; height: 100px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="bg-secondary rounded d-flex align-items-center justify-content-center me-3"
                             style="width: 80px; height: 100px;">
                            <i class="bi bi-book text-white"></i>
                        </div>
                    }
                    <div>
                        <h6 class="mb-1">@Model.BookTitle</h6>
                        <small class="text-muted">Condition: @Model.Condition</small><br>
                        <small class="text-muted">Source: @Model.Source</small>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="form-group">
            <label asp-for="PulloutReason" class="form-label">
                <i class="bi bi-chat-text"></i> Reason for Pulling Out *
            </label>
            <textarea asp-for="PulloutReason" 
                      class="form-control" 
                      rows="4" 
                      placeholder="Please specify the reason for pulling out this book copy (e.g., Damaged, Lost, Outdated, etc.)"
                      required></textarea>
            <span asp-validation-for="PulloutReason" class="text-danger"></span>
            <div class="form-text">
                <strong>Common reasons:</strong> Damaged, Lost, Stolen, Outdated edition, Worn out, Missing pages, etc.
            </div>
        </div>
        
        <div class="form-group mt-3">
            <label class="form-label">
                <i class="bi bi-calendar-event"></i> Pullout Date
            </label>
            <input type="text" class="form-control-plaintext" readonly value="@DateTime.Now.ToString("dddd, MMMM dd, yyyy")">
            <div class="form-text">The copy will be marked as pulled out as of today.</div>
        </div>
    </div>
    
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-warning">
            <i class="bi bi-box-arrow-right"></i> Pull Out Copy
        </button>
    </div>
</form>

<script>
    $(function() {
        $('form[asp-action="Pullout"]').on('submit', function(e) {
            e.preventDefault();
            
            if (confirm('Are you sure you want to pull out this book copy? This action cannot be easily undone.')) {
                $.post($(this).attr('action'), $(this).serialize())
                    .done(function(response) {
                        if (response.success) {
                            $('#pulloutModal').modal('hide');
                            location.reload();
                        }
                    })
                    .fail(function() {
                        alert('Error pulling out book copy');
                    });
            }
        });
    });
</script>
