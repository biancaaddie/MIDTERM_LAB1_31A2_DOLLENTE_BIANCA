@model Library_Management.Models.BookListViewModel
@{
    ViewData["Title"] = Model.Title;
    var bookCopies = (IEnumerable<Library_Management.Models.BookCopyDetailsViewModel>)ViewBag.BookCopies;
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Book")">Books</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.Title</li>
                </ol>
            </nav>
        </div>
    </div>

    @if (Model.IsArchived)
    {
        <div class="alert alert-warning" role="alert">
            <i class="bi bi-archive-fill"></i>
            <strong>Archived Book:</strong> This book is currently archived and not available in the main library.
            <button class="btn btn-sm btn-outline-success ms-2" onclick="restoreBook('@Model.BookId')">
                <i class="bi bi-arrow-clockwise"></i> Restore to Library
            </button>
        </div>
    }

    <div class="row">
        <!-- Book Cover and Main Info -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <img src="@Model.CoverImageUrl"
                         class="img-fluid rounded shadow-sm mb-3"
                         alt="@Model.Title"
                         style="max-height: 300px; object-fit: cover;">

                    <h3 class="card-title">@Model.Title</h3>
                    <h6 class="text-muted">by <a href="@Url.Action("Details", "Author", new { id = ViewBag.AuthorId })">@Model.AuthorName</a></h6>
                    
                    <div class="d-flex justify-content-center align-items-center mb-3">
                        @if (!string.IsNullOrEmpty(Model.AuthorProfileImageUrl))
                        {
                            <img src="@Model.AuthorProfileImageUrl"
                                 class="rounded-circle me-2"
                                 style="width: 30px; height: 30px; object-fit: cover;"
                                 alt="Author Profile">
                        }
                    </div>
                    
                    <div class="mb-3">
                        <span class="badge bg-primary">@Model.Genre</span>
                        @if (Model.PublishedDate.HasValue)
                        {
                            <span class="badge bg-secondary">@Model.PublishedDate.Value.Year</span>
                        }
                        <span class="badge bg-info">ISBN: @Model.ISBN</span>
                    </div>
                    
                    <div class="mb-3">
                        <div class="d-flex justify-content-between">
                            <span>Available Copies:</span>
                            <strong>@Model.AvailableCopies / @Model.TotalCopies</strong>
                        </div>
                    </div>
                </div>
                
                <div class="card-footer bg-transparent">
                    <div class="d-grid gap-2">
                        @if (!Model.IsArchived)
                        {
                            <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addCopyModal">
                                <i class="bi bi-plus-circle"></i> Add Copy
                            </button>
                            <button class="btn btn-outline-secondary" onclick="archiveBook('@Model.BookId')">
                                <i class="bi bi-archive"></i> Archive Book
                            </button>
                        }
                        <a href="@Url.Action("Index", "Book")" class="btn btn-outline-primary">
                            <i class="bi bi-arrow-left"></i> Back to Books
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Book Details and Copies -->
        <div class="col-md-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-info-circle"></i> Book Description</h5>
                </div>
                <div class="card-body">
                    @if (string.IsNullOrEmpty(Model.Description))
                    {
                        <p class="text-muted">No description available.</p>
                    }
                    else
                    {
                        <p>@Model.Description</p>
                    }
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-collection"></i> Book Copies</h5>
                    @if (bookCopies.Any())
                    {
                        <span class="badge bg-success">@bookCopies.Count(bc => !bc.IsPulledOut) Available</span>
                    }
                </div>
                <div class="card-body">
                    @if (!bookCopies.Any())
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-book display-4 text-muted"></i>
                            <h6 class="mt-3 text-muted">No copies available</h6>
                            <p class="text-muted">Add a copy to make this book available in the library.</p>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th scope="col">Cover</th>
                                        <th scope="col">Condition</th>
                                        <th scope="col">Source</th>
                                        <th scope="col">Added Date</th>
                                        <th scope="col">Status</th>
                                        <th scope="col">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var copy in bookCopies)
                                    {
                                        <tr class="@(copy.IsPulledOut ? "table-danger" : "")">
                                            <td>
                                                <img src="@copy.CoverImageUrl" alt="Book Cover" 
                                                     class="img-thumbnail" style="width: 50px; height: 70px; object-fit: cover;">
                                            </td>
                                            <td>@copy.Condition</td>
                                            <td>@copy.Source</td>
                                            <td>@copy.AddedDate?.ToString("yyyy-MM-dd")</td>
                                            <td>
                                                @if (copy.IsPulledOut)
                                                {
                                                    <span class="badge bg-danger">Pulled Out</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-success">Available</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!copy.IsPulledOut)
                                                {
                                                    <button class="btn btn-sm btn-outline-danger" 
                                                            onclick="pulloutCopy('@copy.BookCopyId')">
                                                        <i class="bi bi-box-arrow-right"></i> Pull Out
                                                    </button>
                                                }
                                                else
                                                {
                                                    <button class="btn btn-sm btn-outline-secondary" 
                                                            type="button" 
                                                            data-bs-toggle="popover" 
                                                            data-bs-title="Pullout Reason" 
                                                            data-bs-content="@copy.PulloutReason <br>Date: @copy.PulloutDate?.ToString("yyyy-MM-dd")" 
                                                            data-bs-html="true">
                                                        <i class="bi bi-info-circle"></i> Details
                                                    </button>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Copy Modal -->
<div class="modal fade" id="addCopyModal" tabindex="-1" aria-labelledby="addCopyModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="AddCopy" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="addCopyModalLabel">Add Book Copy</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="BookId" value="@Model.BookId" />

                    <div class="form-group mb-3">
                        <label for="CoverImageUrl">Cover Image URL</label>
                        <input class="form-control" id="CoverImageUrl" name="CoverImageUrl" required />
                    </div>

                    <div class="form-group mb-3">
                        <label for="Condition">Condition</label>
                        <input class="form-control" id="Condition" name="Condition" required />
                    </div>

                    <div class="form-group mb-3">
                        <label for="Source">Source</label>
                        <input class="form-control" id="Source" name="Source" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Save Copy</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Pullout Modal -->
<div class="modal fade" id="pulloutModal" tabindex="-1" aria-labelledby="pulloutModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content" id="pulloutModalContent">
            <!-- Content will be loaded via AJAX -->
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('[data-bs-toggle="popover"]').popover();
        });
        
        function pulloutCopy(bookCopyId) {
            $('#pulloutModalContent').load('@Url.Action("PulloutModal")?bookCopyId=' + bookCopyId, function() {
                $('#pulloutModal').modal('show');
            });
        }
        
        function archiveBook(bookId) {
            if (confirm('Are you sure you want to archive this book?')) {
                $.post('@Url.Action("ArchiveBook")', { id: bookId })
                    .done(function(response) {
                        if (response.success) {
                            location.reload();
                        }
                    })
                    .fail(function() {
                        alert('Error archiving book');
                    });
            }
        }
        
        function restoreBook(bookId) {
            $.post('@Url.Action("RestoreBook")', { id: bookId })
                .done(function(response) {
                    if (response.success) {
                        location.reload();
                    }
                })
                .fail(function() {
                    alert('Error restoring book');
                });
        }
    </script>
}
