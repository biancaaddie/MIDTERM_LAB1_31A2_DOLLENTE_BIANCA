@model Library_Management.Models.BookListViewModel

<div class="modal-header bg-primary text-white">
    <h5 class="modal-title">@Model.Title</h5>
    <button type="button" class="btn-close" onclick="goBackOrRedirect()" aria-label="Close"></button>
</div>

<div class="modal-body">
    <div class="row g-4">
        <!-- Cover Image -->
        <div class="col-md-4 text-center">
            <img src="@Model.CoverImageUrl"
                 class="img-fluid rounded shadow-sm"
                 alt="@Model.Title"
                 style="max-height: 300px; object-fit: cover;">
        </div>

        <!-- Details -->
        <div class="col-md-8">
            <dl class="row mb-0">
                <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(m => m.ISBN)</dt>
                <dd class="col-sm-8">@Model.ISBN</dd>

                <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(m => m.AuthorName)</dt>
                <dd class="col-sm-8 d-flex align-items-center">
                    @Model.AuthorName
                    @if (!string.IsNullOrEmpty(Model.AuthorProfileImageUrl))
                    {
                        <img src="@Model.AuthorProfileImageUrl"
                             class="rounded-circle ms-2"
                             style="width: 30px; height: 30px; object-fit: cover;"
                             alt="Author Profile">
                    }
                </dd>

                <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(m => m.Genre)</dt>
                <dd class="col-sm-8">@Model.Genre</dd>

                <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(m => m.PublishedDate)</dt>
                <dd class="col-sm-8">@Model.PublishedDate?.ToString("yyyy-MM-dd")</dd>

                <dt class="col-sm-4 fw-semibold">Available Copies</dt>
                <dd class="col-sm-8">@Model.AvailableCopies / @Model.TotalCopies</dd>
            </dl>

            <hr />

            <h6 class="fw-semibold">@Html.DisplayNameFor(m => m.Description)</h6>
            <p class="mb-0">@Model.Description</p>
        </div>
    </div>
</div>

<div class="modal-footer">
    <!-- Close goes back -->
    <button type="button" class="btn btn-outline-primary" onclick="goBackOrRedirect()">
        <i class="bi bi-arrow-left"></i> Close
    </button>

    <!-- Open Add Copy Modal -->
    <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addCopyModal">
        <i class="bi bi-plus-circle"></i> Add Copy
    </button>
</div>

<!-- Add Copy Modal -->
<div class="modal fade" id="addCopyModal" tabindex="-1" aria-labelledby="addCopyModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="AddCopy" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="addCopyModalLabel">Add Book Copy</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="BookId" value="@Model.BookId" />

                    <div class="form-group mb-3">
                        <label for="CoverImageUrl">Cover Image URL</label>
                        <input class="form-control" id="CoverImageUrl" name="CoverImageUrl" required />
                    </div>

                    <div class="form-group mb-3">
                        <label for="Condition">Condition</label>
                        <input class="form-control" id="Condition" name="Condition" required />
                    </div>

                    <div class="form-group mb-3">
                        <label for="Source">Source</label>
                        <input class="form-control" id="Source" name="Source" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Save Copy</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function goBackOrRedirect() {
            if (document.referrer && document.referrer !== window.location.href) {
                history.back();
            } else {
                window.location.href = '@Url.Action("Index", "Book")';
            }
        }
    </script>
}
