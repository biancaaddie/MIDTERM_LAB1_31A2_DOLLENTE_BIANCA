@model IEnumerable<Library_Management.Models.BookListViewModel>

@{
    ViewData["Title"] = "Archived Books";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-0">
                        <i class="bi bi-archive text-warning"></i> Archived Books
                    </h2>
                    <p class="text-muted mb-0">Books that have been archived from the library</p>
                </div>
                <div>
                    <a href="@Url.Action("Index", "Book")" class="btn btn-outline-primary">
                        <i class="bi bi-arrow-left"></i> Back to Books
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        @if (!Model.Any())
        {
            <div class="col-12 text-center py-5">
                <i class="bi bi-archive display-1 text-muted"></i>
                <h4 class="mt-3 text-muted">No archived books</h4>
                <p class="text-muted">Books that are archived will appear here.</p>
            </div>
        }
        else
        {
            @foreach (var book in Model)
            {
                <div class="col-md-6 col-lg-4 col-xl-3 mb-4">
                    <div class="card h-100 shadow-sm border-warning">
                        <div class="position-relative">
                            <span class="badge bg-warning text-dark position-absolute top-0 start-0 m-2" style="z-index: 1;">
                                <i class="bi bi-archive"></i> Archived
                            </span>
                            @if (!string.IsNullOrEmpty(book.CoverImageUrl))
                            {
                                <img src="@book.CoverImageUrl" alt="@book.Title" class="card-img-top" 
                                     style="height: 200px; object-fit: cover; opacity: 0.7;">
                            }
                            else
                            {
                                <div class="card-img-top bg-light d-flex align-items-center justify-content-center" 
                                     style="height: 200px; opacity: 0.7;">
                                    <i class="bi bi-book text-muted" style="font-size: 3rem;"></i>
                                </div>
                            }
                        </div>
                        
                        <div class="card-body">
                            <h5 class="card-title text-muted">@book.Title</h5>
                            <h6 class="card-subtitle mb-2 text-muted">by @book.AuthorName</h6>
                            
                            <div class="mb-2">
                                <span class="badge bg-secondary">@book.Genre</span>
                                @if (book.PublishedDate.HasValue)
                                {
                                    <span class="badge bg-secondary">@book.PublishedDate.Value.Year</span>
                                }
                            </div>
                            
                            <p class="card-text">
                                <small class="text-muted">ISBN: @book.ISBN</small><br>
                                <small class="text-muted">Total Copies: @book.TotalCopies</small><br>
                                <small class="text-muted">Available: @book.AvailableCopies</small>
                            </p>
                            
                            @if (!string.IsNullOrEmpty(book.Description))
                            {
                                <p class="card-text text-muted">
                                    <small>@(book.Description.Length > 80 ? book.Description.Substring(0, 80) + "..." : book.Description)</small>
                                </p>
                            }
                        </div>
                        
                        <div class="card-footer bg-transparent">
                            <div class="btn-group w-100" role="group">
                                <a href="@Url.Action("Details", new { id = book.BookId })" class="btn btn-outline-secondary btn-sm">
                                    <i class="bi bi-eye"></i> View
                                </a>
                                <button class="btn btn-outline-success btn-sm" onclick="restoreBook('@book.BookId')">
                                    <i class="bi bi-arrow-clockwise"></i> Restore
                                </button>
                                <button class="btn btn-outline-danger btn-sm" onclick="deleteBook('@book.BookId')">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

@section Scripts {
    <script>
        function restoreBook(bookId) {
            if (confirm('Are you sure you want to restore this book to the main library?')) {
                $.post('@Url.Action("RestoreBook")', { id: bookId })
                    .done(function(response) {
                        if (response.success) {
                            location.reload();
                        }
                    })
                    .fail(function() {
                        alert('Error restoring book');
                    });
            }
        }

        function deleteBook(bookId) {
            if (confirm('Are you sure you want to permanently delete this book and all its copies? This action cannot be undone.')) {
                $.post('@Url.Action("Delete")', { id: bookId })
                    .done(function() {
                        location.reload();
                    })
                    .fail(function() {
                        alert('Error deleting book');
                    });
            }
        }
    </script>
}
