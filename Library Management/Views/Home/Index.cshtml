@{
    ViewData["Title"] = "Home";
}

<section class="py-5">
    <div class="container">
        <div class="row align-items-center g-4">
            <div class="col-lg-7">
                <h1 class="display-5 fw-bold">Welcome to <span class="text-primary">Library Management</span></h1>
                <p class="lead text-muted">A simple, modern way to manage books, authors, and archives. Use the quick actions below to get started.</p>
                <div class="d-flex gap-3 mt-4">
                    <a class="btn btn-primary btn-lg" asp-controller="Book" asp-action="Index">
                        <i class="bi bi-book"></i> Browse Books
                    </a>
                    <a class="btn btn-outline-secondary btn-lg" asp-controller="Author" asp-action="Index">
                        <i class="bi bi-people"></i> View Authors
                    </a>
                </div>
            </div>
            <div class="col-lg-5">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Quick Links</h5>
                        <div class="list-group list-group-flush">
                            <a class="list-group-item list-group-item-action d-flex align-items-center gap-2" asp-controller="Book" asp-action="Index">
                                <i class="bi bi-plus-circle text-primary"></i>
                                <span>Add a new book</span>
                            </a>
                            <a class="list-group-item list-group-item-action d-flex align-items-center gap-2" asp-controller="Author" asp-action="Index">
                                <i class="bi bi-person-plus text-primary"></i>
                                <span>Add a new author</span>
                            </a>
                            <a class="list-group-item list-group-item-action d-flex align-items-center gap-2" asp-controller="Book" asp-action="Archive">
                                <i class="bi bi-archive text-primary"></i>
                                <span>View archived items</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
