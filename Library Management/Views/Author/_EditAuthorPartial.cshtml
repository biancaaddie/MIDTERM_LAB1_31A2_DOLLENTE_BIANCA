@model Library_Management.Models.EditAuthorViewModel

<form asp-action="EditModal" method="post">
    <input type="hidden" asp-for="AuthorId" />
    <input type="hidden" asp-for="IsArchived" />
    
    <div class="modal-header">
        <h5 class="modal-title">Edit Author</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    
    <div class="modal-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" placeholder="Enter author's full name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="BirthDate" class="form-label"></label>
                    <input asp-for="BirthDate" class="form-control" type="date" />
                    <span asp-validation-for="BirthDate" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="ProfileImageUrl" class="form-label"></label>
                    <input asp-for="ProfileImageUrl" class="form-control" placeholder="https://example.com/author-photo.jpg" />
                    <span asp-validation-for="ProfileImageUrl" class="text-danger"></span>
                    <div class="form-text">Optional: URL to the author's profile photo</div>
                </div>
            </div>
            
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="Biography" class="form-label"></label>
                    <textarea asp-for="Biography" class="form-control" rows="8" 
                              placeholder="Enter a brief biography of the author..."></textarea>
                    <span asp-validation-for="Biography" class="text-danger"></span>
                    <div class="form-text">Optional: Brief description about the author</div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">Update Author</button>
    </div>
</form>

<script>
    $(function() {
        $('form[asp-action="EditModal"]').on('submit', function(e) {
            e.preventDefault();
            
            $.post($(this).attr('action'), $(this).serialize())
                .done(function(response) {
                    if (response.success) {
                        $('#editAuthorModal').modal('hide');
                        location.reload();
                    }
                })
                .fail(function() {
                    alert('Error updating author');
                });
        });
    });
</script>
